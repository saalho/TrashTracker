<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrashTracker.Views.StartPage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="logo_green.png"/>
            <Label Text="Kirjaa ja seuraa tuotettua jätettä." FontSize="Large" HorizontalOptions="Center"/>
            <Label Text="Miksi? Kulutustottumuksien muuttamiseksi, tai ihan vaan uteliaisuudesta. Roskaa kirjataan sen tyypin ja painon mukaisesti, joko grammoissa tai kilogrammoissa." CharacterSpacing="0.2"/>
            <Label Text="Kirjattua jätettä pystyy seuraamaan Historia -sivulta, josta löytää kaiken roskan kokonaismäärän sekä tehdyt yksittäiset kirjaukset." CharacterSpacing="0.2"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>